<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="width: 100%">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Solicitud de beca</h5>
        <h5 class="modal-title-curso" id="exampleModalLongTitle">Curso: {{curso}}</h5>
        
        <a type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/beca" method="post" enctype="multipart/form" >

            <div class="form-beca">
            <div>
                    <label for="nombre-beca" class="label-beca">Nombre <span class="red">*</span></label>
                    <input type="text" id="nombre-beca" name="nombre" class="input-beca" required>
            </div>
        

            <div>
                    <label for="apellidos-beca" class="label-beca">Apellidos <span class="red">*</span></label>
                    <input type="text" id="apellidos-beca" name="apellidos" class="input-beca" required>
            </div>
            <div>
                    <label for="telefono-beca" class="label-beca">Telefono <span class="red">*</span></label>
                    <input type="text" id="telefono-beca" name="telefono" class="input-beca" required>
            </div>
            <div>
                    <label for="email-beca" class="label-beca">Email <span class="red">*</span></label>
                    <input type="email" id="email-beca" name="email" class="input-beca" required>
            </div>
            <div>
                    <label for="nacimiento-beca" class="label-beca">Fecha de nacimiento <span class="red">*</span></label>
                    <input type="date" id="nacimiento-beca" name="nacimiento" class="input-beca" required>
            </div>
            
            </div>
                
            <div class="text-beca">
                
                <div class="text-beca-content">
                    <label for="razon-beca" class="label-beca">¬øPor que deberias becarte?</label>
                    <textarea id="razon-beca" name="razon"></textarea>
                </div>

            </textarea>
            <input type="hidden" value="{{curso}}" name="curso">
            </div>
            <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Aplica ahora</button>
      </div>

        </form>
      </div>
      
    </div>
  </div>
</div>

